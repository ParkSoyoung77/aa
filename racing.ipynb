import matplotlib.pyplot as plt
from matplotlib.animation import FuncAnimation
from IPython.display import HTML
import random

# ì£¼í”¼í„° ë…¸íŠ¸ë¶ ì„¤ì •
plt.rcParams["animation.html"] = "jshtml"

# 2ê°œì˜ ì˜ì—­ ìƒì„± (ìœ„: ì‹œë®¬ë ˆì´ì…˜, ì•„ë˜: ì†ì‹¤ë¥  ê·¸ë˜í”„)
fig, (ax1, ax2) = plt.subplots(2, 1, figsize=(12, 10), gridspec_kw={'height_ratios': [2, 1]})

total_packets = 50
packets = [] 
finished, dropped = 0, 0
success_history, loss_history = [], []

def update(frame):
    global finished, dropped
    ax1.cla()
    ax1.set_xlim(-10, 125); ax1.set_ylim(-2, 3); ax1.axis("off")
    
    # íŠ¸ë™ ë° ë°°ê²½ (ì „ì†¡ ì„ ë¡œ ì‹œê°í™”)
    ax1.add_patch(plt.Rectangle((0, -0.6), 100, 2.2, color='#f1f2f6', zorder=1))
    ax1.axhline(0.5, color='white', linestyle='--', lw=2, zorder=2)
    ax1.fill_between([-10, 125], 1.6, 2.8, color='#ff7675', alpha=0.1) 
    ax1.fill_between([-10, 125], -0.6, -1.8, color='#ff7675', alpha=0.1)
    
    # 1. ìº¡ìŠí™” ë° íŒ¨í‚· ìƒì„±
    if len(packets) + finished + dropped < total_packets and random.random() < 0.4:
        # [ë°ì´í„° + í—¤ë”(ì†ë„, ìƒíƒœ, ID)]ë¥¼ ë¦¬ìŠ¤íŠ¸ë¡œ ë¬¶ì–´ ìº¡ìŠí™”
        packets.append([0, 0.5, random.uniform(3.5, 6.0), "fine", "ğŸƒ"])

    for p in packets[:]:
        p[0] += p[2] # ì „ì†¡ ì†ë„ì— ë”°ë¥¸ ì´ë™
        p[1] += random.uniform(-0.3, 0.3) # ë„¤íŠ¸ì›Œí¬ ë…¸ì´ì¦ˆ
        
        # 2. ê²½ë¡œ ì´íƒˆ(ì—ëŸ¬) íŒì •
        if p[1] > 1.3 or p[1] < -0.3:
            p[3], p[4] = "panic", "ğŸ˜°"
        
        # 3. ì—­ìº¡ìŠí™” ë° ê²°ê³¼ ì²˜ë¦¬
        if p[1] > 1.8 or p[1] < -0.8: # íŒ¨í‚· ìœ ì‹¤
            dropped += 1
            packets.remove(p)
        elif p[0] >= 100: # ì „ì†¡ ì„±ê³µ
            finished += 1
            packets.remove(p)
        else:
            ax1.text(p[0], p[1], p[4], fontsize=22, ha='center', zorder=10)

    # ìƒë‹¨ ëŒ€ì‹œë³´ë“œ
    stats_text = f"âœ… SUCCESS: {finished}  |  âŒ LOSS: {dropped}  |  ğŸ“¦ ON-FLY: {len(packets)}"
    ax1.text(55, 2.5, stats_text, ha='center', va='center', fontsize=12, fontweight='bold',
            bbox=dict(facecolor='white', edgecolor='black', boxstyle='round,pad=0.5'))

    # 4. ì‹¤ì‹œê°„ ê·¸ë˜í”„ ì—…ë°ì´íŠ¸ (í†µê³„ ë°ì´í„° ë¶„ì„)
    success_history.append(finished)
    loss_history.append(dropped)
    
    ax2.cla()
    ax2.plot(success_history, label="Success (Cumulative)", color='#2ecc71', lw=2)
    ax2.plot(loss_history, label="Loss (Cumulative)", color='#e74c3c', lw=2)
    ax2.set_title("Real-time Transmission Statistics", fontsize=10, fontweight='bold')
    ax2.set_xlabel("Time (Frames)"); ax2.set_ylabel("Count")
    ax2.legend(loc='upper left'); ax2.grid(True, alpha=0.3)

ani = FuncAnimation(fig, update, frames=120, interval=100)
plt.close()
HTML(ani.to_jshtml())
